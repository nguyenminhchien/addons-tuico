<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tco_compound_method_company_form_view" model="ir.ui.view">
            <field name="name">tco.compound.method.company.form.view</field>
            <field name="model">tco.compound.method.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="clm_title"/>
                                <field name="clm_code"/>
                            </h1>

                        </div>

                        <notebook>
                            <page id="tco_compound_method_company_line"  string="Method" name="tco_compound_method_company_line">
                                <field name="method_company_line_ids">
                                    <form>
										<group>
                                            <field name="sequence"/>
                                            <field name="clm_internal_code" string="Code"/>
									 		<field name="name" string="Title"/>
                                            <field name="clm_Method_Standarder"/>
                                            <field name="unit"/>
                                            <field name="clm_information"/>
								 		</group>
									</form>
                                    <tree editable="bottom">
                                        <!-- Displayed fields -->
                                        <field name="sequence" string ="se" widget="handle"/>
                                        <field name="clm_internal_code" string="Code"/>
                                        <field name="name" string="Title"/>
                                        <field name="clm_Category"/>
                                        <field name="clm_Method_Standarder"/>
                                        <field name="unit"/>
                                        <field name="clm_information"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tco_compound_method_company_tree_view" model="ir.ui.view">
            <field name="name">tco.compound.method.company.tree.view</field>
            <field name="model">tco.compound.method.company</field>
            <field name="arch" type="xml">
                <tree string="Compound Method" default_order="create_date desc">
                    <field name="clm_code"/>
                    <field name="clm_title" string="Title"/>
                </tree>
            </field>
        </record>

        <record id="action_tco_compound_method_company" model="ir.actions.act_window">
            <field name="name">Company Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tco.compound.method.company</field>
            <!-- <field name="view_type">form</field> --> <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('tco_compound_method_company_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('tco_compound_method_company_form_view')})]"/>
        </record>

        <record id="tco_compound_method_company_view_search" model="ir.ui.view">
            <field name="name">tco.compound.method.company.search</field>
            <field name="model">tco.compound.method.company</field>
            <field name="arch" type="xml">
                <search string="Company Method">
                    <field name="clm_code" string="Code"/>
                    <field name="clm_title" string="Title"/>
                </search>
             </field>
        </record>

<!--        <menuitem id="menu_tco_experiment_method_company"-->
<!--                  action="action_tco_compound_method_company"-->
<!--                        name="Company Method"-->
<!--                        parent="menu_tco_experiment_method"-->
<!--                        sequence="16"/>-->

    </data>
</odoo>
