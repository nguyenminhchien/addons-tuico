<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="tco_mooney_tree_view" model="ir.ui.view">
            <field name="name">tco.mooney.tree.view</field>
            <field name="model">tco.mooney</field>
            <field name="arch" type="xml">
                <tree string="Mooney" default_order="write_date desc" editable="top" >
                    <field name="sequence" widget="handle"/>
                    <field name="clm_testmode" string="Test Mode"/>
                    <field name="product_id" string="Material" />
                    <field name="lot" />
                    <field name="clm_temp"/>
                    <field name="clm_ml"/>
                    <field name="clm_mf"/>
                    <field name="clm_ts5"/>
                    <field name="clm_ts45"/>
                    <field name="clm_result"/>
                    <field name="product_type" force_save="1" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_tco_mooney_filter" model="ir.ui.view">
            <field name="name">tco.mooney.select</field>
            <field name="model">tco.mooney</field>
            <field name="arch" type="xml">
                <search string="Search Mooney">
                    <field name="clm_testmode" />
                    <field name="product_id"  />
<!--                    <separator/>-->

<!--                    <group expand="0" string="Group By">-->
<!--&lt;!&ndash;                        <filter string="Item" name="testing_object" context="{'group_by': 'clm_testobject'}"/>&ndash;&gt;-->
<!--                    </group>-->
                </search>
            </field>
        </record>

        <record id="open_view_mooney_material" model="ir.actions.act_window">
            <field name="name">Mooney Material</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tco.mooney</field>
            <field name="domain">[('product_type','=','material')]</field>
            <field name="view_mode">tree</field>
            <field name="target">main</field>
            <field name="view_id" ref="tco_experiment.tco_mooney_tree_view"/>
            <field name="search_view_id" ref="tco_experiment.view_tco_mooney_filter"/>
            <field name="context">{'default_product_type': 'material'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   No Testing Sample  found. Let's create one!
                </p><p>

                </p>
            </field>
        </record>


    </data>
</odoo>
