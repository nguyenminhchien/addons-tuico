<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tco_result_view_form" model="ir.ui.view">
            <field name="name">tco.result.view.form</field>
            <field name="model">tco.result</field>
            <field name="arch" type="xml">
                <form string="Result">
                    <sheet>
                        <div>
                            <field name="name" class="oe_title" string="Name" placeholder="e.g. method"/>
                        </div>
                        <group>
                            <group>
                                <field name="task_id" invisible="1"/>
                                <field name="project_id"/>
                                <field name="specific_id" />
                                <field name="clm_request_value"/>
                                <field name="clm_result_value"/>
                                <field name="clm_result_min_value" invisible="1"/>
                                <field name="clm_result_max_value" invisible="1"/>
                                <field name="clm_result"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tco_result_tree_view" model="ir.ui.view">
            <field name="name">tco.result.tree.view</field>
            <field name="model">tco.result</field>
            <field name="arch" type="xml">

                <tree string="Physical Result" default_order="write_date desc" editable="top" create="0" edit="0" delete="1" multi_edit="0">
                    <field name="specific_id" string="Method"/>
                    <field name="project_id" invisible="1"/>
                    <field name="clm_result_min_value" invisible="1"/>
                    <field name="clm_result_max_value" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="task_id" string="Task Name"/>
                    <field name="task_id_compound" string="Compound"/>
                    <field name="clm_request_value" string="Request value"/>
                    <field name="result_num" string="Result value"/>
                    <field name="clm_result_value" string="Result value" invisible="1"/>
                    <field name="clm_result_min_value" invisible="1"/>
                    <field name="clm_result_max_value" invisible="1"/>
                    <field name="clm_result" string="Result"/>
                    <button name="action_view_form_task" type="object" title="Task" string="Show Task" class="btn btn-primary"/>
                </tree>
            </field>
        </record>
        <record id="view_tco_result_filter" model="ir.ui.view">
            <field name="name">tco.result.select</field>
            <field name="model">tco.result</field>
            <field name="arch" type="xml">
                <search string="Search Result">
                    <field name="name" string="Method" filter_domain="['|', ('name', 'ilike', self), ('name', 'ilike', self)]"/>
                    <field name="task_id" string="Task Name"/>
                    <field name="task_id_compound" string="Compound"/>
<!--                   &lt; is '<' and  &gt; is '>'-->
                    <field name="clm_result_value" string="Result Value >=" filter_domain="[('clm_result_min_value', '&gt;=', self )]"/>
<!--                    <field name="clm_description" string="Notes"/>-->
                    <separator/>
                    <filter string="Result OK" name="result_ok" domain="[('clm_result', '=', 'ok')]"  />
                    <group expand="0" string="Group By">
                        <filter string="Task Name" name="task_name" context="{'group_by': 'task_id'}"/>
                        <filter string="Compound" name="compound" context="{'group_by': 'task_id_compound'}"/>
                        <filter string="Result" name="clm_result" context="{'group_by': 'clm_result'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="open_view_result_all" model="ir.actions.act_window">
            <field name="name">Physical Result</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tco.result</field>
            <field name="domain">[]</field>
            <field name="view_mode">form,tree</field>
            <field name="target">main</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('tco_experiment.view_tco_result_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('tco_experiment.tco_result_view_form')})]"/>
            <field name="search_view_id" ref="tco_experiment.view_tco_result_filter"/>
            <field name="context">{'search_default_result_ok': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Physical Result found. Let's create one!
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_tco_experiment_view_details_root"
                  name="View details"
                  parent="menu_tco_experiment_root"
                  sequence="112"/>
        <menuitem id="menu_tco_experiment_physical_properties_root"
                  action="tco_experiment.open_view_result_all"
                  name="Physical Result"
                  parent="menu_tco_experiment_view_details_root"
                  sequence="113"/>

        <menuitem id="menu_tco_experiment_testing_root"
                  action="open_view_tco_testing_all_config"
                  name="Testing Sample"
                  parent="menu_tco_experiment_view_details_root"
                  sequence="110"/>

    </data>
</odoo>
